@model ProductViewModel
@section Styles
{
    <link rel="stylesheet" href="~/css/shop_item.css" />
}

@{
    if (Model != null)
    {
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    @if (@Model.UserLanguage == 0)
                    {
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.ProductItem.ImageSource" alt="@Model.ProductItem.ImageAlt" /></div>
                    }
                    else
                    {
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.ProductItem.ImageSource" alt="@Model.ProductItem.ImageAltCZ" /></div>
                    }
                    <div class="col-md-6">
                        @if (@Model.UserLanguage == 0)
                        {
                            <div class="small mb-1">@Model.ProductItem.ProductName</div>
                        }
                        else
                        {
                            <div class="small mb-1">@Model.ProductItem.ProductNameCZ</div>
                        }
                        <!--<h1 class="display-5 fw-bolder">Shop item template</h1>-->
                        <div class="fs-5 mb-5">
                            <span>@Model.ProductItem.Price Kč</span>
                        </div>

                        @if (@Model.UserLanguage == 0)
                        {
                            <p class="lead">@Model.ProductItem.Detail</p>
                        }
                        else
                        {
                            <p class="lead">@Model.ProductItem.DetailCZ</p>
                        }
                        <div class="d-flex">
                            <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 3rem" />
                            <button class="btn btn-outline-dark flex-shrink-0" type="button"
                                    onclick="Buy(@Model.ProductItem.ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart", new { Area = "Customer" })', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')">
                                <i class="bi-cart-fill me-1"></i>
                                Buy
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/Product.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Product.min.js"></script>
    </environment>

}
